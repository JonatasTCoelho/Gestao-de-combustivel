@{
    ViewData["Title"] = "Relatório Veículos";
}

<button id="btnPrint" class="btn btn-primary">Gerar PDF</button>

<br />

    <table id="tblVeiculos" class="table table-striped table-bordered">
        <thead>
            <tr>
            <th>Marca</th>
            <th>Modelo</th>
            <th>Placa</th>
            <th>AnoFabricação</th>]
            <th>AnoModelo</th>
   
            </tr>
        </thead>
        <tbody></tbody>
    </table>

<script src="~/js/jquery/jquery.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $.getJSON("../Veiculos/GetVeiculos", function (veiculos) {
            $.map(veiculos, function (vei) {
                $("#tblVeiculos tbody").append("<tr><td>" + vei.marca + "</td> <td>" + vei.modelo + "</td> <td>" + vei.placa + "</td> <td>" + vei.anoFabricacao + "</td>  <td>" + vei.anoModelo + "</td></tr>");
            });
        });

        $("#btnPrint").click(function () {
            window.print();
        });
    });
</script>
