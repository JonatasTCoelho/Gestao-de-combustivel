@{
    ViewData["Title"] = "Relatório de Consumos";
}

<button id="btnPrint" class="btn btn-primary">Gerar PDF</button>

<br />


<table id="tblConsumos" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Descrição</th>
            <th>Data</th>
            <th>Valor</th>
            <th>Tipo</th>
            <th>ID Veiculo</th>
        </tr>
    </thead>
    <tbody></tbody>
</table>

<script src="~/js/jquery/jquery.min.js"></script>

<script type="text/javascript">
    $(document).ready(function () {
        $.getJSON("../Consumos/getConsumos", function (consumos) {
            $.map(consumos, function (con) {
                $("#tblConsumos tbody").append("<tr><td>" + con.descricao + "</td> <td>" + con.data + "</td> <td>" + con.valor + "</td> <td>" + con.tipo + "</td>  <td>" + con.veiculoID + "</td></tr>");
            });
        });

        $("#btnPrint").click(function () {
            window.print();
        });
    });
</script>